{
  "source": {
    "include": [
      "clerk.js",
      "package.json",
      "README.md"
    ]
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "applicationName": "clerk",
    "meta": {
      "title": "clerk",
      "description": "clerk - CouchDB library for node and the browser",
      "keyword": "clerk couchdb"
    },
    "default": {
      "outputSourceFiles": true
    },
    "linenums": true
  },
  "opts": {
    "destination": "docs"
  }
}
